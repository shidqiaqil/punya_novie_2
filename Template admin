<script>
  // ======= Dark mode persistence =======
  const root = document.documentElement;
  const DARK_KEY = 'admin-dark-mode';
  function applyDarkPreference() {
    const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    const saved = localStorage.getItem(DARK_KEY);
    const useDark = saved ? saved === 'true' : prefersDark;
    root.classList.toggle('dark', useDark);
  }
  applyDarkPreference();
  const toggleDark = () => {
    const enabled = !root.classList.contains('dark');
    root.classList.toggle('dark', enabled);
    localStorage.setItem(DARK_KEY, String(enabled));
  };
  document.getElementById('btn-dark')?.addEventListener('click', toggleDark);
  document.getElementById('btn-dark-mobile')?.addEventListener('click', toggleDark);

  // ======= Sidebar collapse (desktop) =======
  const app = document.getElementById('app');
  const btnToggleSidebar = document.getElementById('btn-toggle-sidebar');
  btnToggleSidebar?.addEventListener('click', () => {
    app.classList.toggle('sidebar-collapsed');
  });

  // ======= Mobile drawer =======
  const drawer = document.getElementById('drawer');
  const openDrawer = () => drawer.classList.remove('hidden');
  const closeDrawer = () => drawer.classList.add('hidden');
  document.getElementById('btn-open-drawer')?.addEventListener('click', openDrawer);
  document.getElementById('btn-close-drawer')?.addEventListener('click', closeDrawer);
  document.getElementById('drawer-backdrop')?.addEventListener('click', closeDrawer);

  // ======= Profile dropdown =======
  const btnProfile = document.getElementById('btn-profile');
  const menuProfile = document.getElementById('menu-profile');
  btnProfile?.addEventListener('click', (e) => {
    e.stopPropagation();
    menuProfile?.classList.toggle('hidden');
  });
  document.addEventListener('click', () => menuProfile?.classList.add('hidden'));

  // ======= Simple search action =======
  document.getElementById('btn-search')?.addEventListener('click', () => {
    const q = document.getElementById('search').value.trim();
    if (!q) return;
    alert('Search: ' + q);
  });

  // ======= Chart.js line chart =======
  const ctx = document.getElementById('lineChart');
  const makeSeries = (n = 7) => Array.from({ length: n }, () => Math.floor(80 + Math.random() * 60));
  let chart;
  function renderChart(days = 7) {
    const labels = Array.from({ length: days }, (_, i) => new Date(Date.now() - (days - i - 1) * 86400000).toLocaleDateString());
    const data = makeSeries(days);
    if (chart) chart.destroy();
    chart = new Chart(ctx, {
      type: 'line',
      data: {
        labels,
        datasets: [{
          label: 'Visits',
          data,
          borderWidth: 2,
          tension: 0.35,
          pointRadius: 2
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: { y: { beginAtZero: false } },
        plugins: { legend: { display: false } }
      }
    });
  }
  renderChart(7);

  document.querySelectorAll('.btn-range').forEach(btn => {
    btn.addEventListener('click', () => {
      document.querySelectorAll('.btn-range').forEach(b => b.classList.remove('bg-gray-100'));
      btn.classList.add('bg-gray-100');
      renderChart(parseInt(btn.dataset.range, 10));
    });
  });

  // ======= Users table (mock) =======
  const users = Array.from({ length: 30 }, (_, i) => ({
    name: `User ${i + 1}`,
    email: `user${i + 1}@example.com`,
    role: ['Admin', 'Editor', 'Viewer'][i % 3],
    status: i % 4 === 0 ? 'Suspended' : 'Active'
  }));

  const tbody = document.getElementById('user-tbody');
  const pageMeta = document.getElementById('page-meta');
  const perPage = 10;
  let page = 1;

  function renderUsers() {
    const start = (page - 1) * perPage;
    const slice = users.slice(start, start + perPage);
    tbody.innerHTML = slice.map(u => `
      <tr>
        <td class="py-3 px-3">${u.name}</td>
        <td class="py-3 px-3 text-gray-500">${u.email}</td>
        <td class="py-3 px-3">
          <span class="px-2 py-1 rounded-lg text-xs ${u.role==='Admin' ? 'bg-rose-50 text-rose-600' : u.role==='Editor' ? 'bg-amber-50 text-amber-700' : 'bg-emerald-50 text-emerald-700'}">${u.role}</span>
        </td>
        <td class="py-3 px-3">
          <span class="inline-flex items-center gap-1.5 text-xs ${u.status==='Active' ? 'text-emerald-600' : 'text-gray-500'}">
            <span class="h-2 w-2 rounded-full ${u.status==='Active' ? 'bg-emerald-500' : 'bg-gray-400'}"></span>
            ${u.status}
          </span>
        </td>
        <td class="py-3 px-3 text-right">
          <button class="px-2 py-1.5 text-xs rounded-lg bg-gray-100 dark:bg-gray-800">Edit</button>
          <button class="ml-1.5 px-2 py-1.5 text-xs rounded-lg bg-rose-50 text-rose-600">Delete</button>
        </td>
      </tr>
    `).join('');
    pageMeta.textContent = `Showing ${start + 1}–${Math.min(start + perPage, users.length)} of ${users.length}`;
    document.getElementById('prev-page').disabled = page === 1;
    document.getElementById('next-page').disabled = start + perPage >= users.length;
  }
  renderUsers();

  document.getElementById('prev-page').addEventListener('click', () => { page--; renderUsers(); });
  document.getElementById('next-page').addEventListener('click', () => { page++; renderUsers(); });

  // Simple filter (client-side)
  document.getElementById('filter-users').addEventListener('input', (e) => {
    const q = e.target.value.toLowerCase();
    const rows = Array.from(tbody.querySelectorAll('tr'));
    rows.forEach(r => {
      const text = r.textContent.toLowerCase();
      r.classList.toggle('hidden', !text.includes(q));
    });
  });

  // ======= Content tabs + mock data =======
  const tabs = document.querySelectorAll('.tab-btn');
  const panels = document.querySelectorAll('.tab-panel');
  tabs.forEach(btn => btn.addEventListener('click', () => {
    tabs.forEach(b => b.classList.remove('bg-gray-100'));
    btn.classList.add('bg-gray-100');
    panels.forEach(p => p.classList.add('hidden'));
    document.getElementById(`tab-${btn.dataset.tab}`).classList.remove('hidden');
  }));

  const posts = Array.from({ length: 6 }, (_, i) => ({
    title: `Post #${i + 1}`,
    excerpt: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer nec odio.',
    date: new Date(Date.now() - i * 86400000).toLocaleDateString()
  }));
  document.getElementById('tab-posts').innerHTML = posts.map(p => `
    <article class="rounded-xl border border-gray-200 dark:border-gray-800 p-4">
      <h4 class="font-semibold">${p.title}</h4>
      <p class="mt-1 text-sm text-gray-500">${p.excerpt}</p>
      <div class="mt-3 flex items-center justify-between text-xs text-gray-500">
        <span>${p.date}</span>
        <div class="space-x-1">
          <button class="px-2 py-1 rounded-lg bg-gray-100 dark:bg-gray-800">Edit</button>
          <button class="px-2 py-1 rounded-lg bg-rose-50 text-rose-600">Delete</button>
        </div>
      </div>
    </article>
  `).join('');

  const mediaGrid = document.getElementById('media-grid');
  mediaGrid.innerHTML = Array.from({ length: 12 }, (_, i) => `
    <div class="aspect-square rounded-xl overflow-hidden border border-gray-200 dark:border-gray-800">
      <img class="h-full w-full object-cover" src="https://picsum.photos/seed/${i+1}/300/300" alt="media ${i+1}" />
    </div>
  `).join('');

  const draftList = document.getElementById('draft-list');
  draftList.innerHTML = Array.from({ length: 5 }, (_, i) => `<li>Draft idea #${i+1}</li>`).join('');

  // ======= Modal (Add User) =======
  const modal = document.getElementById('modal');
  const openModal = () => modal.classList.remove('hidden');
  const closeModal = () => modal.classList.add('hidden');
  document.getElementById('btn-add-user').addEventListener('click', openModal);
  document.getElementById('modal-close').addEventListener('click', closeModal);
  document.getElementById('modal-cancel').addEventListener('click', closeModal);
  document.getElementById('modal-save').addEventListener('click', () => {
    const name = document.getElementById('new-name').value.trim();
    const email = document.getElementById('new-email').value.trim();
    const role = document.getElementById('new-role').value;
    if (!name || !email) return alert('Please fill all fields');
    users.unshift({ name, email, role, status: 'Active' });
    page = 1; renderUsers(); closeModal();
  });

  // Year in footer
  document.getElementById('year').textContent = new Date().getFullYear();
</script>

  </body>
</html>
